<!DOCTYPE html>
<html>
  <head>
    <title>Freescriber</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <%= favicon_link_tag asset_path('favicon-lime.png') %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
  </head>
  <body>
    <% if action_name == "home" %>
      <%= yield %>
    <% else %>
      <div class="container-fluid h-100">
        <div class="row h-100" style= "padding: 0;">
          <div class="col-2 navbar-background px-1">
            <%= render 'shared/navbar/navbar-main' %>
          </div>
          <div class="col-10 content-div">
            <%= yield %>
          </div>
        </div>
      </div>
        <% end %>
        <%# Animation %>
        <%# Highlighter %>
        <%# <script src="js/lottie.js" type="text/javascript"></script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script> %>
      </body>
    </html>
