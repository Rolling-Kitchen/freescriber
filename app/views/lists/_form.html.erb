  <%= simple_form_for @list, remote: true do |f| %>
    <%= f.input :name, label: 'List name', error: 'title is mandatory, please specify one' %>
    <%= f.input :description, as: :text, :input_html => { :rows => 6 }, label: 'Description', placeholder: "optional" %>
    <%= f.submit "submit", class: "btn btn-primary form-button", value: "Create List" %>
  <% end %>