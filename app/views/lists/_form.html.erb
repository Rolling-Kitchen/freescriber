  <%= simple_form_for @list, remote: true do |f| %>
    <%= f.input :name, label: 'Your title please', error: 'title is mandatory, please specify one' %>
    <%= f.input :description, as: :text, :input_html => { :rows => 6 }, label: 'Your description please' %>
    <%= f.button :submit, class: "btn-primary" %>
  <% end %>